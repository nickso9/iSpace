
<div class="container container-login">
    {{#if success_msg}}
    <span class="text-success warning-class">{{success_msg}}</span>
    {{/if}}
    <h1 class='display-1 text-light mt-5 mx-auto'>iSpace</h1>
    {{#if error}}
    <span class="text-danger warning-class">{{error}}</span>
    {{/if}}
    <span class='register-text text-white'>Login:</span>

    <form class='form-login' action="/users/login" method="POST"> 

        <div class="form-group row d-block m-0">
            <label for="email" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10 mx-auto">
            <input type="email" class="form-control" id="email" name="email" autocomplete="on">
            </div>
        </div>

        <div class="form-group row d-block mt-1 m-0">
            <label for="password" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10 mx-auto">
            <input type="password" class="form-control" id="password" name="password" autocomplete="on">
            </div>
        </div>


        <div class="form-group row d-block mt-5 m-0">
        <button type="submit" class="btn btn-primary btn-lg btn-block landing-btn btn-create">Login</button>
        </div>

        <div class="form-login-register">
            <span class='text-white'>No account? <a href="/users/register">Register here</a></span>
        </div>
    </form>
</div>